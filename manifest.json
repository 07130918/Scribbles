{
    "name": "Scribbles",
    "description": "A simple memo extension for Chrome",
    "manifest_version": 3,
    "version": "1.0.0",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Open Scribbles",
        "default_popup": "index.html"
    }
}
